<h1>Listing groups</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of members</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.number_of_members %></td>
        <td class = "mylinks"><%= link_to 'Show', group %></td>
        <td class = "mylinks"><%= link_to 'Edit', edit_group_path(group) %></td>
        <td class = "mylinks"><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

