<h1>Listing origins</h1>

<table>
  <thead>
    <tr>
      <th>Date of birth</th>
      <th>Home town</th>
      <th>Hospital of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @origins.each do |origin| %>
      <tr>
        <td><%= origin.date_of_birth %></td>
        <td><%= origin.home_town %></td>
        <td><%= origin.hospital_of_birth %></td>
        <td><%= link_to 'Show', origin %></td>
        <td><%= link_to 'Edit', edit_origin_path(origin) %></td>
        <td><%= link_to 'Destroy', origin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

